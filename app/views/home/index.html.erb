<div class="container">
  <div class="row">


      <% @posts.order("created_at desc").each do |p| %>

        <div class="col-md-4 col-xs-8 ">
      <div class="card card1" >
        <% if p.image_file_name != nil %>
          <%= image_tag( p.image.url(:medium), class: 'card-img-top', alt: 'Card image cap') %>
        <% else %>
          <%= image_tag("Nema_slike3.png") %>
        <% end %>
        <div class="card-block">
          <h4 class="card-title"><%= link_to p.title, posts_show_path(p.id) %></h4>
          <p class="card-text"><%  p.categories.each do |c| %>
                <%= link_to c.name, category_path(c.id) %>
            <% end %></p>
          <p class="card-text"> <%= p.subtitle %></p>
          <p class="card-text"><%= link_to p.user.name, user_path(p.user.id)  %> <%= p.created_at %></p>

          <div class="gumb">
          <%= button_to "ViÅ¡e", posts_show_path(p.id), class: "btn-lg btn-primary" , :method => :get, form: {style: 'display:inline-block;'} %>
            </div>
        </div>
      </div>

        </div>
      <% end %>





