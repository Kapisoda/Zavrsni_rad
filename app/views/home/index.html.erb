  <div class="container">
<% if flash[:notice] %>
<div class="alert alert-success">
  <strong> <p class="notice"><%= notice %></p></strong>
</div>
<% end %>
    </div>





<div class="container">
  <div class="row">
    <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
      <% @posts.order("created_at desc").each do |p| %>

          <div class="post-preview">
        <a href="post.html">
          <h2 class="post-title">

            <%= link_to p.title, posts_show_path(p.id) %>
          </h2>
          <h3 class="post-subtitle">



            <%  p.categories.each do |c| %>
                <%= link_to c.name, category_path(c.id) %>
            <% end %>




          </h3>
        </a>
        <p class="post-meta">Posted by <a href="#"><%= link_to p.user.name, user_path(p.user.id)  %> </a><%= p.created_at %></p>
      </div>
      <hr>

          <%end%>
      <%= paginate @posts %>

      <!-- Pager -->

    </div>
  </div>
</div>


