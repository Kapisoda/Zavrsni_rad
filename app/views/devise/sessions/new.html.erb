<div class="container">
<div class="flash">
<% if flash[:notice] %>
    <div class="alert alert-success">
      <strong> <p class="notice"><%= notice %></p></strong>
    </div>
<% end %>
</div>
<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'form-signin' }) do |f| %>
    <h2 class="form-signin-heading">Please sign in</h2>

    <%= f.input :email, input_html: { class: 'form-control' }, label: false, placeholder: "Email address" %><br />


    <%= f.input :password, input_html: { class: 'form-control' }, label: false, placeholder: "Password"  %><br />



  <% if devise_mapping.rememberable? -%>

      <%= f.input :remember_me, as: :boolean, checked_value: true, unchecked_value: false%>


  <% end -%>


    <%= f.button :submit, "Log in", class: "btn btn-lg btn-primary btn-block" %>

<% end %>
  <form class="form-signin">
<%= render "devise/shared/links" %>
  </form>

</div>


