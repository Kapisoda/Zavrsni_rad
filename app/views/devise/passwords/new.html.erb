

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name),  html: { class: 'form-signin', method: :post }) do |f| %>
  <%= devise_error_messages! %>
    <h2>Forgot your password?</h2>

    <%= f.input :email, input_html: { class: 'form-control' }, label: false, placeholder: "Email address",autofocus: true %><br />

    <%= f.button :submit, "Send me reset password instructions", class: "btn btn-lg btn-primary btn-block" %>

<% end %>
<form class="form-signin">
<%= render "devise/shared/links" %>
</form>