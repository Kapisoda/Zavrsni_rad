

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'form-signin' }) do |f| %>
  <%= devise_error_messages! %>

    <h2 class="form-signin-heading">Sign up</h2>

      <%= f.input :name, autofocus: true, input_html: { class: 'form-control' },label: false, placeholder: "Name" %><br />


    <%= f.input :email, input_html: { class: 'form-control' }, label: false, placeholder: "Email address",autofocus: true %><br />

  <div class="field">

    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.input :password, autocomplete: "off", input_html: { class: 'form-control' }, label: false, placeholder: "Password"  %>
  </div>


    <%= f.input :password_confirmation, autocomplete: "off", input_html: { class: 'form-control' }, label: false, placeholder: "Password confirmation" %><br />

    <%= f.button :submit, "Sign up", class: "btn btn-lg btn-primary btn-block" %>

<% end %>
<form class="form-signin">
<%= render "devise/shared/links" %>
</form>